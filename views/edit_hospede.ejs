<%- include("_header") -%>

<h1>Atualizar dados de: <%= hospede.nome %></h1>

<form action="/edit-hospede/<%= hospede.id %>" method="post">

  <div class="form-horizontal">


    <div class="form-row">
      <div class="form-group col-md-6">
          <label for="inputNome">Nome</label>
          <input type="text" class="form-control" id="inputNome" name="nome" value="<%= hospede.nome %>"/>
      </div>
      <div class="form-group col-md-6">
          <label for="inputEmail">Email</label>
          <input type="text" class="form-control" id="inputEmail" name="email" value="<%= hospede.email %>"/>
      </div>
  </div>

  <div class="form-row">
      <div class="form-group col-md-6">
          <label for="inputSexo">Sexo</label>
          <select class="form-control" name="sexo">
            <option value="M" <%= hospede.sexo == 'M' ? 'selected' : ''%> >Masculino</option>
            <option value="F" <%= hospede.sexo == 'F' ? 'selected' : ''%> >Feminino</option>
          </select>
      </div>
      <div class="form-group col-md-6">
          <label for="inputCpf">CPF</label>
          <input type="text" class="form-control" id="inputCpf" name="cpf" value="<%= hospede.cpf %>"/>
      </div>
  </div>

  <div class="form-row">
      <div class="form-group col-md-6">
          <label for="inputTelefone">Telefone</label>
          <input type="text" class="form-control" id="inputTelefone" name="telefone" value="<%= hospede.telefone %>" />
      </div>
      <div class="form-group col-md-6">
          <label for="inputDataNascimento">Data Nascimento</label>
          <input type="date" class="form-control" id="inputDataNascimento" name="data_nascimento" value="<%= hospede.data_nascimento %>"/>
      </div>
  </div>

  <div class="form-group">
      <label for="inputAddress">Endere√ßo</label>
      <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St" name="endereco" value="<%= hospede.endereco %>"/>
  </div>

    <div class="form-group row">
      <label class="col-form-label col-sm-2"></label>
      <div class="col-sm-10">
        <input type="submit" value="Confirmar" class="btn btn-default btn-warning" />
        <a class="btn btn-outline-dark cancel" href="/hospedes">Cancelar</a>
      </div>
    </div>

  </div>
</form>

<%- include("_footer") -%>
