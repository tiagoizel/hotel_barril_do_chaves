<%- include("_header") -%>

<h1>Excluir este hospede?</h1>

<form action="/excluir-hospede/<%= hospede.id %>" method="post">
  <div class="form-horizontal">

    <div class="form-group row">
      <label class="col-form-label col-sm-2" for="Nome">Nome</label>
      <div class="col-sm-8">
        <input readonly class="form-control" id="Nome" value="<%= hospede.nome %>" />
      </div>
    </div>
    
    <div class="form-group row">
      <label class="col-form-label col-sm-2" for="Email">Email</label>
      <div class="col-sm-7">
        <input readonly class="form-control" id="Email" value="<%= hospede.email %>" />
      </div>
    </div>
    
    <div class="form-group row">
      <label class="col-form-label col-sm-2" for="Telefone">Telefone</label>
      <div class="col-sm-10">
        <input readonly class="form-control" id="Telefone" value="<%= hospede.telefone %>" />
      </div>
    </div>

    <div class="form-group row">
      <label class="col-form-label col-sm-2"></label>
      <div class="col-sm-10">
        <input type="submit" value="Excluir" class="btn btn-default btn-danger" />
        <a class="btn btn-outline-dark cancel" href="/hospedes">Cancelar</a>
      </div>
    </div>
  </div>
</form>

<%- include("_footer") -%>
