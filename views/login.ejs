  <body class="text-center">
    <form class="form-signin" method="POST" action="/logar">
      <img class="mb-4" src="/img/hbc_logo.jpeg" alt="" width="120" height="120">
      <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
      <label for="inputUsuario" class="sr-only">Usuário</label>
      <input type="text" id="inputUsuario" class="form-control" placeholder="Usuário" required autofocus>
      <label for="inputSenha" class="sr-only">Senha</label>
      <input type="password" id="inputSenha" class="form-control" placeholder="Senha" required>
      <button class="btn btn-lg btn-primary btn-block" type="submit">Entrar</button>
      <p class="mt-5 mb-3 text-muted">&copy; 2021-2030</p>
    </form>
  </body>
